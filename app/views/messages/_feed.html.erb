<% @messages.each do |message| %>
<div class="card my-3 ">
  <div class="row no-gutters pl-3 ">
    <div class="col-md-4 d-flex align-items-center" style="max-width: 64px;">
      <img src="https://bulma.io/images/placeholders/64x64.png" class="card-img" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body pb-0">
        <h5 class="card-title"> 
        <% if signed_in? %>
        <h2>
        <%= "@"+ message.user.username %> </h5>
        </h2>
        <% end %>
        
        <p> <%= message.title %>  </p>
        <p> <%= message.body %>  </p>
      </div>
          <% if user_signed_in? && current_user.id == message.user_id %> 
        <div class="d-flex justify-content-around">
          <%= link_to message do %>
            <span class="icon " style="color:blue"><i class="fa fa-link" aria-hidden="true"></i></span>
          <% end %>
          <%= link_to edit_message_path(message) do %>
            <span class="icon" style="color:blue"><i class="fa fa-pencil" aria-hidden="true"></i></span>
          <% end %>
          <%= link_to message, method: :delete, data: { confirm: "Are you sure you want to delete this ?"} do %>
            <span class="icon" style="color:blue"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
          <% end %>
          </div>
        </div>

        

        

    <% end %>

  </div>
</div>
<% end %>